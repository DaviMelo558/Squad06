@model IEnumerable<SaudeLivre.Models.Blog>

@{
    ViewData["Title"]="Index Blog";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
            <a asp-action="Details" asp-route-id="@item.IdBlog"> @Html.DisplayFor(modelItem => item.Titulo)</a>
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.TextoInicial)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
