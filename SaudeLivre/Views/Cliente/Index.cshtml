@model IEnumerable<SaudeLivre.Models.Cliente>

@{
    ViewData["Title"]="Index Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="background-color: var(--uva);">
    <main style="margin: auto; display: flex; flex-direction: column; min-height: calc(100vh - 134px); justify-content: center;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-warning border-bottom box-shadow mb-3 admin-bg">
            <div class="container" >
                <a class="navbar-brand admin" asp-area="" asp-controller="Cliente" asp-action="Index">Modo Administrador</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Cliente" asp-action="Index">Gerenciar Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Blog" asp-action="Index">Gerenciar Blog</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <p>
            <a class="btn" style="background-color: #3a0ca3; color: #fff;"asp-action="Create">Create New</a>
        </p>
        <table class="table tabela-cadastro">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdCliente">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.IdCliente">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdCliente">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>
