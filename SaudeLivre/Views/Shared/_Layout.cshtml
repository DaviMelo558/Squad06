<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaudeLivre</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow" style="background: #00000080;">
            <div class="container d-sm-inline-flex">
                <a class="navbar-brand text-white .brand"  asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="max-height: 50px; font-family: Lato;" class="rounded" src="~/img/logo3_v2.1.png" alt="logo" />
                    <a style="word-break: break-word; margin-right: auto; font-size:1.6rem; align-self: self-end; color: #fff; text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Index">Livre Saúde</a>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end menu">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="BlogList">BlogLGBT+</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Create">Curso de Etiqueta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted"> @* style="background-color: #00000080;" *@
        <div style="background-color: #00000080">
            <div class="container" style="color: #fff;">
                <a asp-area="" asp-controller="Cliente" asp-action="Index">Admin</a>  &copy; 2021 Copyright - Livre Saúde@* - <a asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a> *@
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
